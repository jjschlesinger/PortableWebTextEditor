<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Editor</title>
    <style type="text/css" media="screen">
        body {
            overflow: hidden;
        }

        #editor {
            margin: 0;
            position: absolute;
            top: 50px;
            bottom: 0;
            left: 0;
            right: 0;
        }
    </style>
</head>
<body>
    
    <div>
        <input type="text"/> <button>Load</button>
    </div>
    <pre id="editor">
    </pre>

    <script src="~/Content/ace/ace.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/jquery-2.1.1.min.js" type="text/javascript" charset="utf-8"></script>
    <script>
        var editor = ace.edit("editor");
        editor.setTheme("ace/theme/twilight");
        editor.getSession().setMode("ace/mode/javascript");
    </script>
</body>
</html>